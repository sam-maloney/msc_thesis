FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];


internalField   uniform 1; 


boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.026381909547739;
    }
    outlet
    {
        type            groovyBC;
        value           uniform 0.75;
        variables (
            "eps=1e-3;"
            "Lx=4.0;"
            "H=1.0;"
            "gamma=4.0/3.0;"
            "M1=5.0;"
            "cin=1.0;"
            "pin=0.75;"
            "kx=2*pi/Lx;"
            "Min=sqrt((2+(gamma-1)*M1*M1)/(2*gamma*M1*M1-gamma+1));"
            "vin=-Min*cin;"
            "tacc=H/mag(vin)/(1-Min);"
            "omega0=4*pi/tacc;"
            "mu=sqrt(1.0 - pow(kx*cin/omega0,2)*(1 - Min*Min));"
            "sinusoid=eps*cos(-omega0*time()+kx*pos().x);"
            "drho=(1+mu*Min)/(1-Min*Min)*sinusoid;"
            "dp=pin*(pow(1+drho,gamma) - 1);"
            "val=0.75 + dp;"
        );
        valueExpression "val";
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
