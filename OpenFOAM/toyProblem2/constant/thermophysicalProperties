FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

thermoType
{
    type            hePsiThermo;
    mixture         pureMixture;
    transport       const;
    thermo          eConst;
    equationOfState perfectGas;
    specie          specie;
    energy          sensibleInternalEnergy;
}

// Note: these are the properties for a "normalised" inviscid gas
//       for which the speed of sound is 1 m/s at a temperature of 1.05K
//       and gamma = 4/3
mixture
{
    specie
    {
        molWeight       1;
    }
    thermodynamics
    {
        Cv              2.142857142857143;
        Hf              0;
    }
    transport
    {
        mu              0;
        Pr              1;
    }
}


